  <modelVersion>4.0.0</modelVersion>
  <groupId>com.hegel.code</groupId>
  <artifactId>note</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>jar</packaging>
  
  <name>note</name>
  <url>http://maven.apache.org</url>
  
<properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <thrift.exe>D:\thrift\thrift-0.9.0.exe</thrift.exe>
    <thrift.src.dir>${basedir}/src/main/thrift</thrift.src.dir>
    <thrift.interface>${thrift.src.dir}/TaobaoService.thrift</thrift.interface>
    <gen.src.dir>${basedir}/target/thrift</gen.src.dir>
    <gen.java.src.dir>${gen.src.dir}/gen-java</gen.java.src.dir>
    <gen.nodejs.src.dir>${gen.src.dir}/gen-nodejs</gen.nodejs.src.dir>
  </properties>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.6</version>
        <configuration></configuration>
        <executions>
          <execution>
            <id>generate-sources</id>
            <phase>generate-sources</phase>
            <configuration>
              <target>
                <echo>
                  create (or clear) output directory for generated files
                </echo>
                <mkdir dir="${gen.src.dir}" />
                <delete>
                  <fileset dir="${gen.src.dir}" includes="**/*" />
                </delete>
                <echo>
                  generate java and nodejs source files from ${thrift.interface}
                </echo>
                <exec executable="${thrift.exe}">
                  <arg value="--gen" />
                  <arg value="java" />
                  <arg value="--gen" />
                  <arg value="js:node" />
                  <arg value="-o" />
                  <arg value="${gen.src.dir}" />
                  <arg value="${thrift.interface}" />
                </exec>
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.8</version>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>${gen.java.src.dir}</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
    </plugins>
  </build>

